{
    "manifest_version": 3,
    "name": "Fuse Portal Parser",
    "version": "1.0.0",
    "description": "Parse university portal pages and send to Fuse Portal",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Fuse Portal Parser",
        "default_icon": {
            "16": "ruby.png",
            "48": "ruby.png",
            "128": "ruby.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:5173/*"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "ruby.png",
        "48": "ruby.png",
        "128": "ruby.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
